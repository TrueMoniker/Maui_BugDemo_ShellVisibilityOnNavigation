<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Page2"
             Title="Page2">
    <VerticalStackLayout>
        <Button
                x:Name="BrokenBtn"
                Text="Broken - Go Back" 
                Clicked="Broken_Clicked"
                HorizontalOptions="Fill" />

        <Button
                x:Name="WorkingBtn"
                Text="Working - Go Back" 
                Clicked="Working_Clicked"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>